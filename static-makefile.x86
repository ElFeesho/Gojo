OBJS=src/main.o src/binds.o
CFLAGS=`pkg-config --cflags sdl` -Wall -g
LIBS=-L/usr/lib/xorg/  -llua -lm -lSDL_image -lSDL_gfx  -lSDL_ttf -lfreetype -lz -lm -lSDL_mixer -lSDL_net  `pkg-config --libs sdl`  -lXt -lvga -ldl 
CC=gcc
PROG=gojo-static-`uname -m`

all:$(OBJS)
	$(CC) -static -o $(PROG) $(OBJS) $(LIBS)

objs/%o:src/%c
	$(CC) -c $(CFLAGS) -o $@ $<

clean:
	rm -f $(OBJS) $(PROG)
