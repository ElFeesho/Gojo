OBJS=src/main.o src/binds.o
CFLAGS=`pkg-config --static --cflags caca lua alsa` -Wall -g -static
LIBS=-L/home/feesh/sandbox/SDL/dest/lib `pkg-config sdl caca lua alsa` -lSDL -lSDL_image -lSDL_gfx -lSDL_ttf -lSDL_net -lSDL_mixer -lm -lpthread -logg -lvorbis -lfreetype -lz  -llua -lm -ldl
PROG=gojo-static-`uname -m`

all:$(OBJS)
	$(CC) -static -o $(PROG) $(OBJS) $(LIBS)

objs/%o:src/%c
	$(CC) -c $(CFLAGS) -o $@ $<

clean:
	rm -f $(OBJS) $(PROG)
